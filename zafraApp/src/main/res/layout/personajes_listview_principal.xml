<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">

    <ImageView
            android:id="@+id/imagenfondolistapersonajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            />
    <ImageView
        android:id="@+id/imgbuttonbtnfijopersonajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/boton_conocezafra_personajesazul" 
        android:layout_marginTop="140dp"
        android:contentDescription="@null"
        
        />

    <ListView
        android:id="@+id/listviewpersonajes"
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:layout_above="@+id/imgbotonlistapersonajes"
        android:layout_below="@+id/imgbuttonbtnfijopersonajes"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="1dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:scrollbarStyle="outsideOverlay"
        android:listSelector="#00000000"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@drawable/res_auxiliar_scrollstyle"
        />

    <ImageView
        android:id="@+id/imgbotonlistapersonajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@null"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@null"
        android:src="@drawable/boton_barra_inferior" />
     
</RelativeLayout>
	
