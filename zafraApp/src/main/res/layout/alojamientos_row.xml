<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/selector_listview_color"
     >

    <ImageView
        android:id="@+id/ImgViewImagenAlojamientos"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:contentDescription="@null"
         />

    <ImageView
        android:id="@+id/imgViewFlechaListado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/res_auxiliares_flechalistado"
        android:contentDescription="@null"
         />

    <TextView
        android:id="@+id/txtNombreAlojamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/ImgViewImagenAlojamientos"
        android:textSize="12sp" 
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/ImgViewEstrella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNombreAlojamiento"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="34dp"
        android:contentDescription="@null"
         />

</RelativeLayout>

