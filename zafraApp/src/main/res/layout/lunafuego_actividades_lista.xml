<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical"
    >
     
	<ImageView
            android:id="@+id/imagenfondoLunaFuego"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
         
            android:contentDescription="@null"
            />
	
    <ScrollView
        android:id="@+id/scrollcustomLunaFuego"
       	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/imgViewLunaFuegoSuperior"
    	android:layout_above="@+id/btnbarrainferiorLunaFuego"
    	android:layout_alignParentTop="true"
    	 android:fadeScrollbars="false"
    	android:scrollbarSize="5dp"
    	android:scrollbarThumbVertical="@drawable/res_auxiliar_scrollstyle"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="190dp" 
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imgbtnGastronomia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:contentDescription="@null" 
                android:layout_margin="0.1dp"
                android:layout_marginTop="5dp" 
                android:onClick="evento_Gastronomia"
                />
            
             <ImageButton
                android:id="@+id/imgbtnVisita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:contentDescription="@null" 
                android:layout_margin="0.1dp"
                android:onClick="evento_Visitas"
                />
             
             <ImageButton
                android:id="@+id/imgbtnExposiciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:contentDescription="@null" 
                android:layout_margin="0.1dp"
                android:onClick="evento_Exposiciones"
                />
             
             <ImageButton
                android:id="@+id/imgbtnDeporte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:contentDescription="@null" 
                android:layout_margin="0.1dp"
                android:onClick="evento_Deporte"
                />
             
             <ImageButton
                android:id="@+id/imgbtnOtras"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:contentDescription="@null" 
                android:layout_margin="0.1dp"
                android:onClick="evento_Otras"
                />
             
             
             
        

            
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imgViewLunaFuegoSuperior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="140dp"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/btnbarrainferiorLunaFuego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/boton_barra_inferior" 
        android:contentDescription="@null"
        />

</RelativeLayout>

