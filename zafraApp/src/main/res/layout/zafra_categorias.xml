<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutdrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">
    
    <ImageView 
        android:id="@+id/imagenfondoCategoriasZafra" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent" 
        android:scaleType="centerCrop" 
        android:contentDescription="@null" />
    
    <ScrollView android:id="@+id/scrollcustomCategoriasZafra" 
        android:layout_width="match_parent" android:layout_height="wrap_content" 
        android:layout_below="@+id/imgViewCategoriaZafra" 
        android:layout_above="@+id/btnbarrainferiorCategoriaZafra" 
        android:layout_alignParentTop="true" 
        android:layout_centerHorizontal="true" 
        android:fadeScrollbars="false"
    	android:scrollbarSize="5dp"
    	android:scrollbarThumbVertical="@drawable/res_auxiliar_scrollstyle"
        android:layout_marginTop="190dp">

        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="vertical" 
            android:gravity="center">
            
            <ImageButton 
                android:id="@+id/imgbtnMonumentos" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:contentDescription="@null" 
                android:layout_margin="0.1dp"
                android:layout_marginTop="5dp" 
                android:src="@drawable/estado_boton_monumento" 
                android:onClick="VerMonumentos" />

            <ImageButton 
                android:id="@+id/imgbtnLeyendas" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:layout_margin="0.1dp"
                android:onClick="VerLeyendas" 
                android:src="@drawable/estado_boton_leyendas"
                android:contentDescription="@null" />

            <ImageButton 
                android:id="@+id/imgbtnPersonajes" 
                android:onClick="VerPersonajes" 
                android:layout_width="match_parent" 
                android:layout_height="match_parent" 
                android:background="@null"
                android:adjustViewBounds="true"
          		android:scaleType="centerCrop"
                android:layout_margin="0.1dp"
                android:src="@drawable/estado_boton_personajes"
                android:contentDescription="@null" />

        </LinearLayout>
    </ScrollView>
    <ImageView 
        android:id="@+id/imgViewCategoriaZafra" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true" 
        android:layout_centerHorizontal="true" 
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="140dp" 
        android:src="@drawable/boton_menuprincipal_conocezafraazul" 
        android:contentDescription="@null" />
    
    <ImageView 
        android:id="@+id/btnbarrainferiorCategoriaZafra" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@null" 
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true" 
        android:layout_alignParentLeft="true" 
        android:src="@drawable/boton_barra_inferior" 
        android:contentDescription="@null" />
		</RelativeLayout>

	
